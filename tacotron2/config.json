{
    "epochs": 1000,
    "batch_size": 8,
    "iters_per_grad_acc": 1,
    "optimizer": "Adam",
    "learning_rate": 1e-3,
    "grad_clip_thresh": 1,
    "weight_decay": 1e-6,
    "iters_per_validation": 100,
    "iters_per_checkpoint": 500,
    "warm_up_checkpoint": "checkpts/kireev_1/continue_7/checkpoint_329000",
    "output_directory": "checkpts/kireev_1/continue_8",
    "log_directory": "logs",
    "seed": 1234,
    
    "fp16_run": false,
    "dist_config": {
        "dist_backend": "nccl",
        "dist_url": "tcp://localhost:54321"
    },
    "cudnn_enabled": true,
    "cudnn_benchmark": true,

    "training_files": "filelists/train_shorter_than_13_sec_and_quantum_shorter_than_7_sec.txt",
